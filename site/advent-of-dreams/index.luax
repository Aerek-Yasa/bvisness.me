end

function Day(atts, children)
  return <div class="day" data-day={ atts.day.num }>
    <div class="thumbnail relative aspect-ratio--1x1">
      <div class="aspect-ratio--object">
        <Picture src={ relpath("days/day"..atts.day.num..".jpg") } scale={ 3 } />
