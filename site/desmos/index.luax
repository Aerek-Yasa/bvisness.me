        new THREE.Vector3(-nearDir.x, nearDir.y, nearDir.z),
        new THREE.Vector3(-farDir.x, farDir.y, farDir.z),
      ]));
      frustum.add(ThreeGraph.Line([
        new THREE.Vector3(-nearDir.x, -nearDir.y, nearDir.z),
        new THREE.Vector3(-farDir.x, -farDir.y, farDir.z),
      ]));
      frustum.add(ThreeGraph.Line([
        new THREE.Vector3(nearDir.x, -nearDir.y, nearDir.z),
        new THREE.Vector3(farDir.x, -farDir.y, farDir.z),
      ]));

      var squareSize = 0.08;
      frustum.add(ThreeGraph.Line([
        new THREE.Vector3(squareSize, squareSize, -nearDist),
        new THREE.Vector3(-squareSize, squareSize, -nearDist),
        new THREE.Vector3(-squareSize, -squareSize, -nearDist),
        new THREE.Vector3(squareSize, -squareSize, -nearDist),
        new THREE.Vector3(squareSize, squareSize, -nearDist),
      ], ThreeGraph.Mat_Color(0x0000ff)));
      frustum.add(ThreeGraph.Line([
        new THREE.Vector3(squareSize, squareSize, -farDist),
        new THREE.Vector3(-squareSize, squareSize, -farDist),
        new THREE.Vector3(-squareSize, -squareSize, -farDist),
        new THREE.Vector3(squareSize, -squareSize, -farDist),
        new THREE.Vector3(squareSize, squareSize, -farDist),
      ], ThreeGraph.Mat_Color(0xff0000)));

      var lineDirections = [
        new THREE.Vector3(
          ci.w,
          ci.h,
          -ci.d
        ),
        new THREE.Vector3(
          -ci.w,
          ci.h,
          -ci.d
        ),
        new THREE.Vector3(
          -ci.w,
          -ci.h,
          -ci.d
        ),
        new THREE.Vector3(
          ci.w,
          -ci.h,
          -ci.d
        ),
      ];
      lineDirections.forEach(function(dir) {
        var dashBias = -0.001;
        var line = ThreeGraph.PointSlopeLine(
          new THREE.Vector3(dashBias * Math.sign(dir.x), dashBias * Math.sign(dir.y), 0),
          dir,
          ThreeGraph.Mat_ColorDashed(0x999999, 0.1, 0.05),
        );
        frustum.add(line);
      });

      var sequence = new Sequence(
        {
          frustumOpacity: 0,
        },
        [
          {
            duration: 1.5,
            easingFunction: Easing.easeInOutQuad,
            values: {
              frustumOpacity: 1,
            },
            init: function() {
              resetVerts(frustum);
            },
            f: function(vals, st) {
              setOpacity(frustum, vals.frustumOpacity);
            },
          },
          {
            duration: 3,
            easingFunction: Easing.easeInOutQuad,
            f: function(vals, st) {
              transformVerts(frustum, function(orig) {
                var after = orig.clone();
                after.x /= -orig.z;
                after.y /= -orig.z;

                return orig.clone().lerp(after, st);
              });
            },
          },
          {
            duration: 3,
            values: {
              frustumOpacity: 1,
            },
            f: function() {},
          },
          {
            duration: 1.5,
            easingFunction: Easing.easeInOutQuad,
            values: {
              frustumOpacity: 0,
            },
            f: function(vals, st) {
              setOpacity(frustum, vals.frustumOpacity);
            },
          },
        ],
      );

      function animate(dt, t) {
        cameraAnchor.rotation.y = wobble(t, 50, orbitSpeed);
        sequence.do(t % sequence.totalDuration);
      }
    ]] />
  </div>

